<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <RevealBackgroundBrush x:Key="RevealRoundBackground" 
                         FallbackColor="{StaticResource SystemChromeMediumColor}"
                         Color="{StaticResource SystemChromeMediumColor}" 
                         Opacity="0.5" />

  <RevealBorderBrush x:Key="TextRevealAccentForeground" 
                     FallbackColor="{ThemeResource SystemAccentColor}"
                     Color="{ThemeResource SystemAccentColor}" 
                     TargetTheme="Light"/>

  <RevealBorderBrush x:Key="SystemControlBackgroundAccentRevealBorderBrush" 
                     FallbackColor="{ThemeResource SystemAccentColor}"
                     Color="{ThemeResource SystemAccentColor}" 
                     TargetTheme="Light"/>


  <RevealBackgroundBrush x:Key="GridViewItemRevalBackround"
                         Color="{ThemeResource SystemAccentColorDark1}" Opacity="0.3" TargetTheme="Light"/>

  <SolidColorBrush x:Key="AccentDarkBackground" Color="{ThemeResource SystemAccentColorDark1}" Opacity="0.66"/>

  <SolidColorBrush x:Key="SystemAccentColorDark1Brush" Color="{ThemeResource SystemAccentColorDark1}"/>
</ResourceDictionary>
