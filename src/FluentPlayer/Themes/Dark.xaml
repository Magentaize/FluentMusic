<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <RevealBackgroundBrush x:Key="RevealRoundBackground" 
                         FallbackColor="{StaticResource SystemChromeMediumColor}"
                         Color="{StaticResource SystemChromeMediumColor}" 
                         Opacity="0.5" />

  <RevealBorderBrush x:Key="TextRevealAccentForeground" 
                     FallbackColor="{ThemeResource SystemAccentColorDark1}"
                     Color="{ThemeResource SystemAccentColorDark1}" 
                     TargetTheme="Dark"/>

  <RevealBackgroundBrush x:Key="GridViewItemRevalBackround"
                         Color="{ThemeResource SystemAccentColorLight1}" Opacity="0.3" TargetTheme="Dark"/>

  <SolidColorBrush x:Key="AccentDarkBackground" Color="{ThemeResource SystemAccentColorLight1}" Opacity="0.66"/>

  <SolidColorBrush x:Key="SystemAccentColorDark1Brush" Color="{ThemeResource SystemAccentColorLight1}"/>
</ResourceDictionary>
