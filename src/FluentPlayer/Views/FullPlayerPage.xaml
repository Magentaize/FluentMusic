<Page
    x:Class="Magentaize.FluentPlayer.Views.FullPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:Magentaize.FluentPlayer.ViewModels.Converter"
    xmlns:local="using:Magentaize.FluentPlayer.Views"
    xmlns:cc="using:Magentaize.FluentPlayer.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

  <Page.Resources>
    <converter:PositionSliderToolTipConverter x:Key="PositionSliderToolTipConverter" />
  </Page.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Border Grid.Row="0">
      <Pivot Grid.Row="0">
        <Pivot.Resources>
          <Style TargetType="PivotHeaderItem" BasedOn="{StaticResource RevealPivotHeaderItemStyle}"/>
        </Pivot.Resources>
        <PivotItem x:Uid="Artists">
          <PivotItem.Header>
            <TextBlock Text="Artists"/>
          </PivotItem.Header>
          <local:FullPlayerArtistView ItemsSource="{x:Bind Vm.DataSource, Mode=OneWay}"/>
        </PivotItem>

        <PivotItem x:Uid="Albums">
          <PivotItem.Header>
            <TextBlock Text="Albums" Foreground="{ThemeResource TextRevealAccentForeground}"/>
          </PivotItem.Header>

        </PivotItem>

        <PivotItem x:Uid="Genres">
          <PivotItem.Header>
            <TextBlock Text="Genres" Foreground="{ThemeResource TextRevealAccentForeground}"/>
          </PivotItem.Header>

        </PivotItem>

        <PivotItem x:Uid="Settings">
          <PivotItem.Header>
            <TextBlock Text="Settings" Foreground="{ThemeResource TextRevealAccentForeground}"/>
          </PivotItem.Header>

        </PivotItem>
      </Pivot>
    </Border>

    <StackPanel Orientation="Vertical" Grid.Row="1">
      <cc:DragNotifySlider Style="{StaticResource BaseDragNotifySliderStyle}"
                           Maximum="{x:Bind Vm.SliderNaturalPosition, Mode=OneWay}"
                           Value="{x:Bind Vm.SliderCurrentPosition, Mode=OneWay}" 
                           ThumbToolTipValueConverter="{StaticResource PositionSliderToolTipConverter}" 
                           SliderDragStarted="DragNotifySlider_OnSliderDragStarted"
                           SliderDragCompleted="DragNotifySlider_OnSliderDragCompleted"
      />
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal">
          <StackPanel Orientation="Vertical">
            <TextBlock Text="{x:Bind Vm.TrackTitle, Mode=OneWay}" />
            <TextBlock Text="{x:Bind Vm.TrackArtist, Mode=OneWay}" />
            <TextBlock Text="{x:Bind Vm.PositionInfo, Mode=OneWay}" />
          </StackPanel>
        </StackPanel>

        <cc:PlaybackController Grid.Column="1"
                               IsPlaying="{x:Bind Vm.IsPlaying, Mode=OneWay}"
                               ResumePauseCommand="{x:Bind Vm.ResumePauseCommand, Mode=OneWay}"
                               PreviousCommand="{x:Bind Vm.PreviousCommand}"
                               NextCommand="{x:Bind Vm.NextCommand}" />
      </Grid>
    </StackPanel>
  </Grid>
</Page>
