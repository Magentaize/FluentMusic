<Page
  x:Class="Magentaize.FluentPlayer.Views.Shell"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:Magentaize.FluentPlayer.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Background="{ThemeResource SystemControlAcrylicWindowBrush}"
  mc:Ignorable="d">

  <StackPanel>
    <Border Height="28" >
      <TextBlock x:Name="TitleBar" Text="Fluent Player" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0"/>
    </Border>
    <Frame x:Name="ShellFrame"/>

    <Pivot>
      <PivotItem x:Uid="Library" Header="Library">
        <ScrollViewer >
          <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Frame x:Name="LoactionFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
          </StackPanel>
        </ScrollViewer>
      </PivotItem>
    </Pivot>
  </StackPanel>
</Page>
