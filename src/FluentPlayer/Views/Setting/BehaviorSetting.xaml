<UserControl
  x:Class="Magentaize.FluentPlayer.Views.Setting.BehaviorSetting"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:Magentaize.FluentPlayer.Views.Setting"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="300"
  d:DesignWidth="400"
  mc:Ignorable="d">

  <Border>
    <StackPanel Orientation="Vertical">
      <TextBlock Style="{StaticResource TitleTextBlock}" Text="Follow song" />

      <TextBlock Text="Automatically scroll to the playing song" />
      <ToggleSwitch IsOn="{x:Bind ViewModel.ScrollToPlayingSongAutomaticallyChecked}" />
    </StackPanel>
  </Border>
</UserControl>
